{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "removeComments": true,
    "preserveSymlinks": true,
    "isolatedModules": true,
    "target": "es6",
    "module": "es6",
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es6"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "react-native-reanimated-skeleton.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
